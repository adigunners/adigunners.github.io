  height: 40px;
  flex: 0 0 40px;
  border-radius: var(--radius-xl);
  display: grid;
  place-items: center;
  background: linear-gradient(135deg, var(--primary-color), #59215e);
  color: #fff;
  font-size: 1.05rem;
}

/* Generic inline SVG helper */
.svg-icon {
  width: 1em;
  height: 1em;
  display: inline-block;
  fill: currentColor;
}

.prize-card .icon .svg-icon {
  width: 20px;
  height: 20px;
}

.stat-icon .svg-icon {
