}

@media (min-width: 1025px) {
  .stats-row {
    max-width: 800px;
    gap: 30px;
  }

  .stat-box {
    width: 200px; /* Fixed identical width */
    height: 110px; /* Fixed identical height */
    padding: var(--spacing-md); /* Fixed identical padding */
  }
}

/* Prize summary grid enhancements */
@media (min-width: 769px) and (max-width: 1024px) {
  .prize-summary {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
}

@media (min-width: 1025px) {
  .prize-summary {
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
}
