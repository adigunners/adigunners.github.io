/* =============== UNIFIED STAT BOX SYSTEM =============== */
/*
 * Unified stat box component replacing inconsistent implementations
 * Supports both flexbox and grid container systems
 * Uses BEM methodology for consistent structure
 */

/* Container Systems - Support both flexbox (index.html) and grid (winners.html) patterns */
.stat-box-container,
.stats-row {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-lg); /* 24px */
  justify-content: center; /* Center the group horizontally */
  align-items: center; /* Center the group vertically */
  width: 100%;
  margin: 0 auto var(--spacing-lg); /* Center container itself */
}

.stat-box-container--grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-lg);
}

/* Base Stat Box Component - Unified BEM Structure */
.stat-box {
  /* Layout Foundation - IDENTICAL dimensions for all boxes */
  flex: 0 0 200px; /* Fixed width, no grow/shrink */
  width: 200px; /* Explicit width */
  height: 110px; /* Explicit height */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  
  /* Visual Foundation */
  background: var(--card-background);
  border-radius: var(--radius-lg);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  border: 2px solid transparent;
  
  /* Spacing Foundation - Fixed padding */
  padding: var(--spacing-md); /* 16px all around */
  
  /* Interaction & Performance */
  transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  cursor: default;
  
  /* Overflow Prevention */
  overflow: hidden;
  box-sizing: border-box;
  word-wrap: break-word;
}

.stat-box:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  border-color: var(--secondary-color);
}

/* BEM Elements - Consistent Naming */
.stat-box__icon {
  font-size: 1.8rem;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 100%;
  max-width: 40px;
  height: 40px;
}

.stat-box__title {
  font-weight: 600;
  font-size: 0.9rem;
  color: var(--heading-color);
  margin: 0 0 var(--spacing-xs) 0;
  line-height: 1.2;
  word-wrap: break-word;
  hyphens: auto;
  text-align: center;
  overflow-wrap: break-word;
  max-width: 100%;
}

.stat-box__number {
  font-weight: 700;
  font-size: 2rem;
  color: var(--primary-color);
  letter-spacing: 0.3px;
  margin: 0;
  line-height: 1;
  font-variant-numeric: tabular-nums;
  word-wrap: break-word;
  overflow-wrap: break-word;
  max-width: 100%;
}

/* Primary Variant - Enhanced Emphasis System */
.stat-box--primary {
  box-shadow: 0 6px 20px rgba(55, 0, 60, 0.12);
  background: linear-gradient(135deg, rgba(255, 255, 255, 1), rgba(248, 249, 250, 0.9));
  border-color: rgba(55, 0, 60, 0.1);
  /* IDENTICAL dimensions to regular boxes */
  /* Styling emphasis only, not size */
}

.stat-box--primary:hover {
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(55, 0, 60, 0.18);
  border-color: var(--primary-color);
}

.stat-box--primary .stat-box__icon {
  font-size: 1.8rem; /* Same as regular boxes */
  opacity: 1;
}

.stat-box--primary .stat-box__number {
  font-size: 2rem; /* Same as regular boxes */
  font-weight: 700; /* Emphasis through weight */
}

.stat-box--primary .stat-box__title {
  font-size: 0.9rem; /* Same as regular boxes */
  font-weight: 700; /* Emphasis through weight */
  color: var(--heading-color);
}

/* Legacy Support - Maintain Backward Compatibility */
.stat-icon {
  font-size: 2rem;
  color: var(--primary-color);
  margin-bottom: var(--spacing-sm);
}

.stat-title {
  font-weight: 600;
  font-size: 1rem;
  color: var(--heading-color);
  margin: 0 0 var(--spacing-xs) 0;
}

.stat-number {
  font-weight: 700;
  font-size: 2.2rem;
  color: var(--primary-color);
  letter-spacing: 0.5px;
  margin-bottom: var(--spacing-xs);
}

