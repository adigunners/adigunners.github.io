  color: var(--heading-color);
  font-size: 1rem;
  margin: 0; /* Reset h4 default margin */
}

.prize-card .subtitle {
  font-size: 0.9rem;
  color: #333;
  font-weight: 600;
}

.prize-card .title-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 10px;
  flex-wrap: nowrap;
