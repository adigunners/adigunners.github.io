    margin: 0 auto var(--spacing-lg); /* Center container */
    gap: var(--spacing-lg); /* Generous gap for desktop */
    flex-wrap: wrap; /* Allow wrap if needed */
    justify-content: center; /* Center the boxes */
  }
  
  .stat-box {
    width: 200px; /* Fixed identical width */
