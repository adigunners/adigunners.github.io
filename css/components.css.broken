/* Ultra-compact mobile (≤360px) - Galaxy Fold, iPhone SE */
@media (max-width: 360px) {
  .stat-box-container,
  .stats-row {
    gap: var(--spacing-sm);
  }
  
  .stat-box {
    min-width: 160px;
    padding: var(--spacing-md) var(--spacing-sm);
  }
  
  .stat-box__icon {
    font-size: 1.8rem;
    margin-bottom: var(--spacing-xs);
  }
  
  .stat-box__title {
    font-size: 0.9rem;
    line-height: 1.2;
  }
  
  .stat-box__number {
    font-size: 2rem;
  }
  
  .stat-box--primary .stat-box__icon {
    font-size: 2rem;
  }
  
  .stat-box--primary .stat-box__number {
    font-size: 2.6rem;
  }
  
  .stat-box--primary .stat-box__title {
    font-size: 0.95rem;
  }
}

/* =============== ACCESSIBILITY ENHANCEMENTS =============== */
.stat-box[aria-live] {
  /* Ensures screen readers announce dynamic content updates */
}

.stat-box:focus-within {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .stat-box {
    border-color: var(--heading-color);
  }
  
  .stat-box--primary {
    background: white;
    border-color: var(--primary-color);
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .stat-box,
  .stat-box:hover,
  .stat-box--primary:hover {
    transition: none;
    transform: none;
  }
}

